@model FacultyWebsite.Models.SearchCourse

@{
    Layout = "_Indexc.cshtml";
}




<div class="container add" id="div2" style="display: block;">
    <form asp-action="SearchCourse" method="post" class="login-form">
        <h2>Search for a Course with Any Of this</h2>

        <div class="form-group input-group">
            <label asp-for="confirmCoursenum" style="font-size:18px">By Course code:</label>
            <input asp-for="confirmCoursenum" type="text" class="form-control" />
        </div>
        <div class="form-group input-group">
            <label asp-for="confirmCoursename" style="font-size:18px">By Course Name:</label>
            <input asp-for="confirmCoursename" type="text" class="form-control" />
        </div>
        <div class="form-group input-group">
            <label asp-for="confirmLevel" style="font-size:18px">By Level:</label>
            <input asp-for="confirmLevel" type="text" class="form-control" />
        </div>

        <div class="form-group input-group">
            <label asp-for="confirmCreditHours" style="font-size:18px">By Credit Hours :</label>
            <input asp-for="confirmCreditHours" type="text" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Search</button><br />
    </form> <br />
    <hr /><br />


    <div class="table-responsive">
        <table class="courses-table">
    @if (Model != null)
    {
        foreach (var item in Model.Courses)
        {
            <dl class="row">


                        <thead>
                            <tr>
                                <th style="background-color: var(--fourth-color); color:var(--thirteen-color)">Course Code</th>
                                <th style="background-color: var(--fourth-color); color:var(--thirteen-color)">Course Name</th>
                                <th style="background-color: var(--fourth-color); color:var(--thirteen-color)">Course Level</th>
                                <th style="background-color: var(--fourth-color); color:var(--thirteen-color)">Course
                                    CreditHoures</th>
                                <th style="background-color: var(--fourth-color); color:var(--thirteen-color)">Course Descrption
                                </th>
                            </tr>
                        </thead>

            </dl>
            <dl class="row">
                        <tbody>
                            <tr>
                                <td>
                                    @item.Coursenum
                                </td>
                                <td>

                                    @item.Coursename
                                </td>

                                <td>

                                    @item.CourseLevel
                                </td>

                                <td>

                                    @item.CreditHuors
                                </td>
                                <td>

                                    @item.CourseDescription
                            </tr>
                            </tbody>

            </dl>

        }
    }
        </table>
    </div>


</div>

<div style="text-align : center ; font-size:20px ; color : red ;">
    @ViewData["result"]
</div>
