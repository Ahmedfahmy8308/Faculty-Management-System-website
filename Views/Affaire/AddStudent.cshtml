@model FacultyWebsite.Models.AddStudent

@{
    Layout = "_Indexs.cshtml";
}

<head>

    <style>.text-danger{color: red;} </style>

</head>

<div style="text-align : center ; font-size:20px ; color : red ;">
    @ViewData["result"]
</div>

<div class="container add" id="div2" style="display: block;">
    <form asp-action="AddStudent" enctype="multipart/form-data" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2>Add New Student</h2>
        <div class="form-group input-group">
            <label asp-for="Fname" class="control-label">First Name</label>
            <input asp-for="Fname" type="text" class="form-control" required />
            <span asp-validation-for="Fname" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="Lname" class="control-label">Last Name</label>
            <input asp-for="Lname" type="text" class="form-control" required />
            <span asp-validation-for="Lname" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="Ssn" class="control-label">Student SSN</label>
            <input asp-for="Ssn" type="text" class="form-control" required />
            <span asp-validation-for="Ssn" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="Username" class="control-label"></label>
            <input asp-for="Username" type="text" class=" form-control" required />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="Email" class="control-label">E-mail</label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>


        <div class="form-group input-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" type="text" id="Password" class="form-control" required />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>

        <div class="form-group input-group">
            <label asp-for="IdentityId" class="control-label">Student Code</label>
            <input asp-for="IdentityId" type="text" class="form-control" required />
            <span asp-validation-for="IdentityId" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="Seatnum" class="control-label">Seat Number</label>
            <input asp-for="Seatnum" type="number" class="form-control" />
            <span asp-validation-for="Seatnum" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="Phone" class="control-label">Phone</label>
            <input asp-for="Phone" type="text" id="phone" name="phone" class="form-control" required />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="Depnum" class="control-label">Department Number</label>
            <input asp-for="Depnum" type="number" class="form-control" required />
            <span asp-validation-for="Depnum" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="Level" class="control-label">Level</label>
            <input asp-for="Level" type="number" id="level" name="level" class="form-control" required />
            <span asp-validation-for="Level" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="Gpa" class="control-label">GPA</label>
            <input asp-for="Gpa" type="text" id="gpa" name="gpa" class="form-control" required />
            <span asp-validation-for="Gpa" class="text-danger"></span>
        </div>

        <div class="form-group id">
            <label asp-for="Image" class="control-label">Student Image</label>
            <input type="file" asp-for="Image" class="form-control" accept=".jpg, .jpeg" required /><br />
            <span asp-validation-for="Image" class="text-danger"></span><br>
        </div>
        <input type="submit" value="Add Student" id="button" />
    </form>
</div>


