
@model FacultyWebsite.Models.SearchLectureAttendance

@{
    Layout = "_IndexL.cshtml";
}

<head>

    <style>
        .text-danger {
            color: red;
        }


        table {
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
        }

        .ttf {
            width: 29%;
            border-collapse: collapse;
            position: fixed;
            right: 10.5%;
            top: 39%;
            height: 60%;
            overflow-y: auto;
        }
    </style>

</head>

<div style="text-align : center ; font-size:20px ; color : red ;">
    @ViewData["result"]
</div>

<div class="container add" id="div2" style="display: block; position:fixed">
    <form asp-action="SearchLectureAttendance" enctype="multipart/form-data" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2>Search Lecture Attendance </h2>

        <div class="form-group input-group">
            <label asp-for="CourseNum" class="control-label">Course code</label>
            <input asp-for="CourseNum" type="text" class="form-control" required />
            <span asp-validation-for="CourseNum" class="text-danger"></span>
        </div>

        <div class="form-group input-group">
            <label asp-for="LectureNum" class="control-label">Lecture Number</label>
            <input asp-for="LectureNum" type="text" class="form-control" required />
            <span asp-validation-for="LectureNum" class="text-danger"></span>
        </div>


        <input type="submit" value="Search" id="button" />
    </form>


</div>

    @{
        if (Model != null){
        if (Model.sa != null)
        {
        <div class="container add" id="div2" style="display: block; position:fixed ; right:10% ; width:30% ;">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h2 style=" text-align:center">Attendance Data</h2>

                <hr style="margin:15px" />
            <div class="form-group input-group">
                <label asp-for="period" class="control-label" style="display:inline"> period : </label>
                <label id="CourseCode" class="Lecdata" name="CourseCode" style="display:inline">@Model.period Houres</label>

            </div>

            <div class="form-group input-group">
                <label asp-for="Decription" class="control-label" style="display:inline">Decription : </label>
                <label id="CourseCode" class="Lecdata" name="CourseCode" style="display:inline">@Model.Decription</label>
            </div>

                
            </div>





        <div class="ttf">
            <table id="schedule">
                <tr>
                    <th>   </th>
                    <th>Firest Name</th>
                    <th>Last Name</th>
                    <th>Level</th>
                    <th>Has Course</th>

                </tr>
                @{int i = 1;}
                @foreach (var item in Model.sa)
                {
                    <tr>
                            <th>@i </th>
                        <td>@item.Fname</td>
                        <td>@item.Lname</td>
                        <td>@item.Level</td>
                        <td>@item.HasCourse</td>
                            @{
                                i++;
                            }
                    </tr>
                   
                }

            </table>
        </div>

            
                  }  
               
        }
    }

